## Logging configuration
[loggers]
keys = root, ckan, ckanext

[handlers]
keys = file 

[formatters]
keys = generic

[logger_root]
level = WARNING
handlers = file

[logger_ckan]
level = INFO
handlers = file
qualname = ckan
propagate = 0

[logger_ckanext]
level = DEBUG
handlers = file
qualname = ckanext
propagate = 0

[handler_file]
class = logging.handlers.RotatingFileHandler
formatter = generic
level = NOTSET
args = ('/var/log/ckan/ckan-production.log', 'a', 2000000, 9)

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s] %(message)s
